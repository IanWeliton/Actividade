package DAO;

import Conexao.ConexaoComMySQL;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;
import beans.inscricao;

/**
 *
 * @author Camila <Camila.Serrao>
 */

//classe Data Acess Object. Criar uma classe DOA para cada classe bean.
//Exemplo com classe Categoria.

public class InscricaoDAO {
    private Connection conexao=null;

    public InscricaoDAO() {
    conexao = ConexaoComMySQL.getConexaoMySQL();
    }
    
    //inserir
    public boolean insert(inscricao inscricao){ 
        String sql = "INSERT INTO inscricao (id_inscricao, cpf, rg, nome, nota, dt_hora, matricula, email, curso, modalidade, turno, telefone_aluno, telefone_resp, id_edital_projeto) VALUES (?,?,?,?,?,?,?,?,?,?,?,?,?,?)";
        PreparedStatement statement = null;
        try{
        statement = conexao.prepareStatement(sql);
        
        statement.setInt(1, inscricao.getId_inscricao()); 
        statement.setString(2, inscricao.getCpf());
        statement.setString(3, inscricao.getRg());
        statement.setString(4, inscricao.getNome()); 
        statement.setInt(5, inscricao.getNota());
        statement.setString(6, inscricao.getDt_hora());
        statement.setInt(7, inscricao.getMatricula());
        statement.setString(8, inscricao.getEmail());
        statement.setString(9, inscricao.getCurso());
        statement.setString(10, inscricao.getModalidade());
        statement.setString(11, inscricao.getTurno());
        statement.setString(12, inscricao.getTelefone_aluno());
        statement.setString(13, inscricao.getTelefone_resp());
        statement.setInt(14, inscricao.getId_edital_projeto());
        statement.executeUpdate();
        return true;
    }catch (SQLException e){
            System.out.println("erro: "+e);
            return false;
    }finally{
            //fechar conexao
            ConexaoComMySQL.FecharConexao();
        }
    }


}
